// 编写完毕后对本文件点右键，可按配置规则创建表和添加数据{
	"tangshi": {
		"data": [{
			"content": "寥落古行宫，宫花寂寞红。白头宫女在，闲坐说玄宗。",
			"title": "行宫",
			"author": "元稹",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "空山不见人，但闻人语响。返景入深林，复照青苔上。",
			"title": "鹿柴",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "君自故乡来，应知故乡事。来日绮窗前，寒梅著花未？",
			"title": "杂诗三首·其二",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "三日入厨下，洗手作羹汤。未谙姑食性，先遣小姑尝。",
			"title": "新嫁娘词",
			"author": "王建",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "红豆生南国，春来发几枝。愿君多采撷，此物最相思。",
			"title": "相思",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "山中相送罢，日暮掩柴扉。春草明年绿，王孙归不归？(明年 一作：年年)",
			"title": "送别 / 山中送别 / 送友",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "绿蚁新醅酒，红泥小火炉。晚来天欲雪，能饮一杯无？",
			"title": "问刘十九",
			"author": "白居易",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "白日依山尽，黄河入海流。欲穷千里目，更上一层楼。",
			"title": "登鹳雀楼",
			"author": "王之涣",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "独坐幽篁里，弹琴复长啸。深林人不知，明月来相照。",
			"title": "竹里馆",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "鸣筝金粟柱，素手玉房前。欲得周郎顾，时时误拂弦。",
			"title": "听筝",
			"author": "李端",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "向晚意不适，驱车登古原。夕阳无限好，只是近黄昏。",
			"title": "乐游原 / 登乐游原",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "功盖三分国，名成八阵图。（名成 一作：名高）江流石不转，遗恨失吞吴。",
			"title": "八阵图",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "床前明月光，疑是地上霜。举头望明月，低头思故乡。",
			"title": "静夜思",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "春眠不觉晓，处处闻啼鸟。夜来风雨声，花落知多少。",
			"title": "春晓",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "岭外音书断，经冬复历春。近乡情更怯，不敢问来人。",
			"title": "渡汉江",
			"author": "宋之问",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "美人卷珠帘，深坐颦蛾眉。(蛾眉 一作：蹙)但见泪痕湿，不知心恨谁。",
			"title": "怨情",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "千山鸟飞绝，万径人踪灭。孤舟蓑笠翁，独钓寒江雪。",
			"title": "江雪",
			"author": "柳宗元",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "移舟泊烟渚，日暮客愁新。野旷天低树，江清月近人。",
			"title": "宿建德江",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "怀君属秋夜，散步咏凉天。空山松子落，幽人应未眠。",
			"title": "秋夜寄邱员外 / 秋夜寄丘二十二员外",
			"author": "韦应物",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "终南阴岭秀，积雪浮云端。林表明霁色，城中增暮寒。",
			"title": "终南望余雪",
			"author": "祖咏",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "故国三千里，深宫二十年。一声何满子，双泪落君前。",
			"title": "宫词·故国三千里",
			"author": "张祜",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "打起黄莺儿，莫教枝上啼。啼时惊妾梦，不得到辽西。",
			"title": "春怨 / 伊州歌",
			"author": "金昌绪",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "松下问童子，言师采药去。只在此山中，云深不知处。",
			"title": "寻隐者不遇 / 孙革访羊尊师诗",
			"author": "贾岛",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "归山深浅去，须尽丘壑美。莫学武陵人，暂游桃源里。",
			"title": "崔九欲往南山马上口号与别 / 留别王维 / 送崔九",
			"author": "裴迪",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "苍苍竹林寺，杳杳钟声晚。荷笠带斜阳，青山独归远。(斜阳 一作：夕阳)",
			"title": "送灵澈上人",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "泠泠七弦上，静听松风寒。(七弦  一作：七丝)古调虽自爱，今人多不弹。",
			"title": "听弹琴",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "寒雨连江夜入吴，平明送客楚山孤。洛阳亲友如相问，一片冰心在玉壶。",
			"title": "芙蓉楼送辛渐",
			"author": "王昌龄",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "昨夜裙带解，今朝蟢子飞。铅华不可弃，莫是藁砧归。",
			"title": "玉台体",
			"author": "权德舆",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "北斗七星高，哥舒夜带刀。至今窥牧马，不敢过临洮。",
			"title": "哥舒歌",
			"author": "西鄙人",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "闺中少妇不知愁，春日凝妆上翠楼。忽见陌头杨柳色，悔教夫婿觅封侯。",
			"title": "闺怨",
			"author": "王昌龄",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "昨夜风开露井桃，未央前殿月轮高。 平阳歌舞新承宠，帘外春寒赐锦袍。",
			"title": "春宫曲",
			"author": "王昌龄",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "独在异乡为异客，每逢佳节倍思亲。遥知兄弟登高处，遍插茱萸少一人。",
			"title": "九月九日忆山东兄弟",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "葡萄美酒夜光杯，欲饮琵琶马上催。醉卧沙场君莫笑，古来征战几人回？",
			"title": "凉州词二首·其一",
			"author": "王翰",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "孤云将野鹤，岂向人间住。莫买沃洲山，时人已知处。",
			"title": "送方外上人 / 送上人",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "寂寂花时闭院门，美人相并立琼轩。 含情欲说宫中事，鹦鹉前头不敢言。",
			"title": "宫词 / 宫中词",
			"author": "朱庆馀",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "泪湿罗巾梦不成，夜深前殿按歌声。 红颜未老恩先断，斜倚薰笼坐到明。",
			"title": "后宫词",
			"author": "白居易",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "洞房昨夜停红烛，待晓堂前拜舅姑。 妆罢低声问夫婿，画眉深浅入时无。",
			"title": "近试上张籍水部 / 近试上张水部 / 闺意献张水部",
			"author": "朱庆馀",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "故人西辞黄鹤楼，烟花三月下扬州。孤帆远影碧空尽，唯见长江天际流。(唯 通：惟)",
			"title": "黄鹤楼送孟浩然之广陵",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "朝辞白帝彩云间，千里江陵一日还。两岸猿声啼不住，轻舟已过万重山。",
			"title": "早发白帝城 / 白帝下江陵",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "回乐峰前沙似雪，受降城外月如霜。(回乐 一作：回乐）不知何处吹芦管，一夜征人尽望乡。",
			"title": "夜上受降城闻笛",
			"author": "李益",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "故园东望路漫漫，双袖龙钟泪不干。 马上相逢无纸笔，凭君传语报平安。",
			"title": "逢入京使",
			"author": "岑参",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "宣室求贤访逐臣，贾生才调更无伦。可怜夜半虚前席，不问苍生问鬼神。",
			"title": "贾生",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "乘兴南游不戒严，九重谁省谏书函。 春风举国裁宫锦，半作障泥半作帆。",
			"title": "隋宫 / 隋堤",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "瑶池阿母绮窗开，黄竹歌声动地哀。 八骏日行三万里，穆王何事不重来。",
			"title": "瑶池",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "云母屏风烛影深，长河渐落晓星沉。嫦娥应悔偷灵药，碧海青天夜夜心。",
			"title": "嫦娥",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "君问归期未有期，巴山夜雨涨秋池。 何当共剪西窗烛，却话巴山夜雨时。",
			"title": "夜雨寄北",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "为有云屏无限娇，凤城寒尽怕春宵。 无端嫁得金龟婿，辜负香衾事早朝。",
			"title": "为有",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "岐王宅里寻常见，崔九堂前几度闻。 正是江南好风景，落花时节又逢君。",
			"title": "江南逢李龟年",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "嵩云秦树久离居，双鲤迢迢一纸书。 休问梁园旧宾客，茂陵秋雨病相如。",
			"title": "寄令狐郎中",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "青山隐隐水迢迢，秋尽江南草未凋。二十四桥明月夜，玉人何处教吹箫？",
			"title": "寄扬州韩绰判官",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "落魄江南载酒行，楚腰纤细掌中轻。(江南 一作：江湖；纤细 一作：肠断)十年一觉扬州梦，赢得青楼薄幸名。",
			"title": "遣怀",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "繁华事散逐香尘，流水无情草自春。日暮东风怨啼鸟，落花犹似坠楼人。",
			"title": "金谷园",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "娉娉袅袅十三余，豆蔻梢头二月初。春风十里扬州路，卷上珠帘总不如。多情却似总无情，唯觉樽前笑不成。蜡烛有心还惜别，替人垂泪到天明。",
			"title": "赠别二首",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "银烛秋光冷画屏，轻罗小扇扑流萤。天阶夜色凉如水，卧看牵牛织女星。(天阶 一作：天街；卧看 一作：坐看)",
			"title": "秋夕",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "清时有味是无能，闲爱孤云静爱僧。 欲把一麾江海去，乐游原上望昭陵。",
			"title": "将赴吴兴登乐游原一绝",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "折戟沉沙铁未销，自将磨洗认前朝。东风不与周郎便，铜雀春深锁二乔。",
			"title": "赤壁",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "烟笼寒水月笼沙，夜泊秦淮近酒家。商女不知亡国恨，隔江犹唱后庭花。",
			"title": "泊秦淮",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "岁岁金河复玉关，朝朝马策与刀环。 三春白雪归青冢，万里黄河绕黑山。",
			"title": "征人怨 / 征怨",
			"author": "柳中庸",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "多情却似总无情，唯觉樽前笑不成。蜡烛有心还惜别，替人垂泪到天明。",
			"title": "赠别",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "谁谓伤心画不成，画人心逐世人情。 君看六幅南朝事，老木寒云满故城。",
			"title": "金陵图",
			"author": "韦庄",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "独怜幽草涧边生，上有黄鹂深树鸣。 春潮带雨晚来急，野渡无人舟自横。",
			"title": "滁州西涧",
			"author": "韦应物",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "隐隐飞桥隔野烟，石矶西畔问渔船。 桃花尽日随流水，洞在清溪何处边。",
			"title": "桃花溪",
			"author": "张旭",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "别梦依依到谢家，小廊回合曲阑斜。多情只有春庭月，犹为离人照落花。",
			"title": "寄人",
			"author": "张泌",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "金陵津渡小山楼，一宿行人自可愁。 潮落夜江斜月里，两三星火是瓜州。",
			"title": "题金陵渡",
			"author": "张祜",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "禁门宫树月痕过，媚眼惟看宿鹭窠。斜拔玉钗灯影畔，剔开红焰救飞蛾。",
			"title": "赠内人",
			"author": "张祜",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "日光斜照集灵台，红树花迎晓露开。 昨夜上皇新授箓，太真含笑入帘来。",
			"title": "集灵台·其一",
			"author": "张祜",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "虢国夫人承主恩，平明骑马入宫门。却嫌脂粉污颜色，淡扫峨眉朝至尊。",
			"title": "集灵台·其二",
			"author": "张祜",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "誓扫匈奴不顾身，五千貂锦丧胡尘。可怜无定河边骨，犹是春闺梦里人！(春闺 一作：深闺)",
			"title": "陇西行四首·其二",
			"author": "陈陶",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "近寒食雨草萋萋，著麦苗风柳映堤。等是有家归未得，杜鹃休向耳边啼。",
			"title": "杂诗",
			"author": null,
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "少小离家老大回，乡音无改鬓毛衰。(鬓毛衰 一作：鬓毛催)儿童相见不相识，笑问客从何处来。",
			"title": "回乡偶书二首·其一",
			"author": "贺知章",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "朱雀桥边野草花，乌衣巷口夕阳斜。 旧时王谢堂前燕，飞入寻常百姓家。",
			"title": "乌衣巷",
			"author": "刘禹锡",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "月落乌啼霜满天，江枫渔火对愁眠。姑苏城外寒山寺，夜半钟声到客船。",
			"title": "枫桥夜泊 / 夜泊枫江",
			"author": "张继",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "纱窗日落渐黄昏，金屋无人见泪痕。 寂寞空庭春欲晚，梨花满地不开门。",
			"title": "春怨",
			"author": "刘方平",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "冰簟银床梦不成，碧天如水夜云轻。 雁声远过潇湘去，十二楼中月自明。",
			"title": "瑶瑟怨",
			"author": "温庭筠",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "春城无处不飞花，寒食东风御柳斜。 日暮汉宫传蜡烛，轻烟散入五侯家。",
			"title": "寒食 / 寒食日即事",
			"author": "韩翃",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "城阙辅三秦，风烟望五津。与君离别意，同是宦游人。海内存知己，天涯若比邻。无为在歧路，儿女共沾巾。",
			"title": "送杜少府之任蜀州 / 送杜少府之任蜀川",
			"author": "王勃",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "玄宗回马杨妃死，云雨难忘日月新。终是圣明天子事，景阳宫井又何人。",
			"title": "马嵬坡",
			"author": "郑畋",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "万壑树参天，千山响杜鹃。山中一夜雨，树杪百重泉。汉女输橦布，巴人讼芋田。文翁翻教授，不敢倚先贤。",
			"title": "送梓州李使君",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "长乐宫连上苑春，玉楼金殿艳歌新。 君门一入无由出，唯有宫莺得见人。",
			"title": "宫词",
			"author": "顾况",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "楚塞三湘接，荆门九派通。江流天地外，山色有无中。 郡邑浮前浦，波澜动远空。襄阳好风日，留醉与山翁。",
			"title": "汉江临泛 / 汉江临眺",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "更深月色半人家，北斗阑干南斗斜。 今夜偏知春气暖，虫声新透绿窗纱。",
			"title": "月夜 / 夜月",
			"author": "刘方平",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "太乙近天都，连山接海隅。白云回望合，青霭入看无。 分野中峰变，阴晴众壑殊。欲投人处宿，隔水问樵夫。",
			"title": "终南山",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "新妆宜面下朱楼，深锁春光一院愁。 行到中庭数花朵，蜻蜓飞上玉搔头。",
			"title": "和乐天春词 / 春词",
			"author": "刘禹锡",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "中岁颇好道，晚家南山陲。兴来每独往，胜事空自知。行到水穷处，坐看云起时。偶然值林叟，谈笑无还期。",
			"title": "终南别业 / 初至山中 / 入山寄城中故人",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "晚年唯好静，万事不关心。自顾无长策，空知返旧林。 松风吹解带，山月照弹琴。君问穷通理，渔歌入浦深。",
			"title": "酬张少府",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "空山新雨后，天气晚来秋。明月松间照，清泉石上流。竹喧归浣女，莲动下渔舟。随意春芳歇，王孙自可留。",
			"title": "山居秋暝",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "清川带长薄，车马去闲闲。流水如有意，暮禽相与还。 荒城临古渡，落日满秋山。迢递嵩高下，归来且闭关。",
			"title": "归嵩山作",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "寒山转苍翠，秋水日潺湲。倚杖柴门外，临风听暮蝉。渡头馀落日，墟里上孤烟。(馀 一作 余)复值接舆醉，狂歌五柳前。",
			"title": "辋川闲居赠裴秀才迪",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "客路青山外，行舟绿水前。(青山外 一作：青山下)潮平两岸阔，风正一帆悬。海日生残夜，江春入旧年。乡书何处达？归雁洛阳边。",
			"title": "次北固山下",
			"author": "王湾",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "碧阑干外绣帘垂，猩血屏风画折枝。 八尺龙须方锦褥，已凉天气未寒时。",
			"title": "已凉",
			"author": "韩偓",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "不知香积寺，数里入云峰。古木无人径，深山何处钟。泉声咽危石，日色冷青松。薄暮空潭曲，安禅制毒龙。",
			"title": "过香积寺",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "离离原上草，一岁一枯荣。野火烧不尽，春风吹又生。远芳侵古道，晴翠接荒城。又送王孙去，萋萋满别情。",
			"title": "草 / 赋得古原草送别",
			"author": "白居易",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "故人江海别，几度隔山川。乍见翻疑梦，相悲各问年。孤灯寒照雨，深竹暗浮烟。更有明朝恨，离杯惜共传。",
			"title": "云阳馆与韩绅宿别",
			"author": "司空曙",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "静夜四无邻，荒居旧业贫。雨中黄叶树，灯下白头人。以我独沉久，愧君相见频。平生自有分，况是蔡家亲。",
			"title": "喜外弟卢纶见宿",
			"author": "司空曙",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "世乱同南去，时清独北还。他乡生白发，旧国见青山。 晓月过残垒，繁星宿故关。寒禽与衰草，处处伴愁颜。",
			"title": "贼平后送人北归",
			"author": "司空曙",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "阳月南飞雁，传闻至此回。我行殊未已，何日复归来。 江静潮初落，林昏瘴不开。明朝望乡处，应见陇头梅。",
			"title": "题大庾岭北驿",
			"author": "宋之问",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "蜀僧抱绿绮，西下峨眉峰。为我一挥手，如听万壑松。 客心洗流水，馀响入霜钟。不觉碧山暮，秋云暗几重。",
			"title": "听蜀僧濬弹琴 / 听蜀僧浚弹琴",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "牛渚西江夜，青天无片云。登舟望秋月，空忆谢将军。余亦能高咏，斯人不可闻。明朝挂帆席，枫叶落纷纷。(挂帆 一作：去)",
			"title": "夜泊牛渚怀古",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "吾爱孟夫子，风流天下闻。红颜弃轩冕，白首卧松云。 醉月频中圣，迷花不事君。高山安可仰，徒此揖清芬。",
			"title": "赠孟浩然",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "渡远荆门外，来从楚国游。山随平野尽，江入大荒流。月下飞天镜，云生结海楼。仍怜故乡水，万里送行舟。",
			"title": "渡荆门送别",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "十年离乱后，长大一相逢。问姓惊初见，称名忆旧容。别来沧海事，语罢暮天钟。明日巴陵道，秋山又几重。",
			"title": "喜见外弟又言别",
			"author": "李益",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "联步趋丹陛，分曹限紫微。晓随天仗入，暮惹御香归。 白发悲花落，青云羡鸟飞。圣朝无阙事，自觉谏书稀。",
			"title": "寄左省杜拾遗",
			"author": "岑参",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "青山横北郭，白水绕东城。此地一为别，孤蓬万里征。浮云游子意，落日故人情。挥手自兹去，萧萧班马鸣。",
			"title": "送友人",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "客去波平槛，蝉休露满枝。永怀当此节，倚立自移时。 北斗兼春远，南陵寓使迟。天涯占梦数，疑误有新知。",
			"title": "凉思",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "残阳西入崦，茅屋访孤僧。落叶人何在，寒云路几层。 独敲初夜磬，闲倚一枝藤。世界微尘里，吾宁爱与憎。",
			"title": "北青萝",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "本以高难饱，徒劳恨费声。五更疏欲断，一树碧无情。 薄宦梗犹泛，故园芜已平。烦君最相警，我亦举家清。",
			"title": "蝉",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "凄凉宝剑篇，羁泊欲穷年。黄叶仍风雨，青楼自管弦。新知遭薄俗，旧好隔良缘。心断新丰酒，销愁斗几千。",
			"title": "风雨",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "昔闻洞庭水，今上岳阳楼。吴楚东南坼，乾坤日夜浮。亲朋无一字，老病有孤舟。戎马关山北，凭轩涕泗流。",
			"title": "登岳阳楼",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "高阁客竟去，小园花乱飞。参差连曲陌，迢递送斜晖。 肠断未忍扫，眼穿仍欲归。芳心向春尽，所得是沾衣。",
			"title": "落花",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "远送从此别，青山空复情。几时杯重把，昨夜月同行。 列郡讴歌惜，三朝出入荣。江村独归处，寂寞养残生。",
			"title": "奉济驿重送严公四韵",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "今夜鄜州月，闺中只独看。遥怜小儿女，未解忆长安。 香雾云鬟湿，清辉玉臂寒。何时倚虚幌，双照泪痕干。",
			"title": "月夜",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "凉风起天末，君子意如何。鸿雁几时到，江湖秋水多。文章憎命达，魑魅喜人过。应共冤魂语，投诗赠汨罗。",
			"title": "天末怀李白",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "细草微风岸，危樯独夜舟。星垂平野阔，月涌大江流。名岂文章著，官应老病休。飘飘何所似，天地一沙鸥。",
			"title": "旅夜书怀",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "此道昔归顺，西郊胡正繁。至今残破胆，应有未招魂。 近得归京邑，移官岂至尊。无才日衰老，驻马望千门。",
			"title": "至德二载甫自京金光门出问道归凤翔乾元初…有悲往事",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "戍鼓断人行，边秋一雁声。(边秋 一作:秋边)露从今夜白，月是故乡明。有弟皆分散，无家问死生。寄书长不达，况乃未休兵。",
			"title": "月夜忆舍弟",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "他乡复行役，驻马别孤坟。近泪无干土，低空有断云。 对棋陪谢傅，把剑觅徐君。唯见林花落，莺啼送客闻。",
			"title": "别房太尉墓",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "国破山河在，城春草木深。感时花溅泪，恨别鸟惊心。烽火连三月，家书抵万金。白头搔更短，浑欲不胜簪。",
			"title": "春望",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "旅馆无良伴，凝情自悄然。寒灯思旧事，断雁警愁眠。远梦归侵晓，家书到隔年。沧江好烟月，门系钓鱼船。",
			"title": "旅宿",
			"author": "杜牧",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "早被婵娟误，欲妆临镜慵。承恩不在貌，教妾若为容。 风暖鸟声碎，日高花影重。年年越溪女，相忆采芙蓉。",
			"title": "春宫怨",
			"author": "杜荀鹤",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "独有宦游人，偏惊物候新。云霞出海曙，梅柳渡江春。淑气催黄鸟，晴光转绿蘋。忽闻歌古调，归思欲沾巾。",
			"title": "和晋陵陆丞早春游望",
			"author": "杜审言",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "花隐掖垣暮，啾啾栖鸟过。星临万户动，月傍九霄多。 不寝听金钥，因风想玉珂。明朝有封事，数问夜如何。",
			"title": "春宿左省",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "山暝闻猿愁，沧江急夜流。风鸣两岸叶，月照一孤舟。 建德非吾土，维扬忆旧游。还将两行泪，遥寄海西头。",
			"title": "宿桐庐江寄广陵旧游",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "木落雁南度，北风江上寒。我家襄水曲，遥隔楚云端。乡泪客中尽，孤帆天际看。(孤帆 一作：归帆)迷津欲有问，平海夕漫漫。",
			"title": "早寒江上有怀 / 早寒有怀 / 江上思归",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "寂寂竟何待，朝朝空自归。欲寻芳草去，惜与故人违。当路谁相假，知音世所稀。只应守寂寞，还掩故园扉。",
			"title": "留别王侍御维 / 留别王维",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "北阙休上书，南山归敝庐。不才明主弃，多病故人疏。 白发催年老，青阳逼岁除。永怀愁不寐，松月夜窗虚。",
			"title": "岁暮归南山 / 归故园作 / 归终南山",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "故人具鸡黍，邀我至田家。绿树村边合，青山郭外斜。开轩面场圃，把酒话桑麻。待到重阳日，还来就菊花。",
			"title": "过故人庄",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "一丘常欲卧，三径苦无资。北土非吾愿，东林怀我师。黄金燃桂尽，壮志逐年衰。日夕凉风至，闻蝉但益悲。",
			"title": "秦中感秋寄远上人 / 秦中寄远上人",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "八月湖水平，涵虚混太清。气蒸云梦泽，波撼岳阳城。 欲济无舟楫，端居耻圣明。坐观垂钓者，徒有羡鱼情。",
			"title": "望洞庭湖赠张丞相 / 临洞庭",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "闻道黄龙戍，频年不解兵。可怜闺里月，长在汉家营。少妇今春意，良人昨夜情。谁能将旗鼓，一为取龙城。",
			"title": "杂诗三首·其三",
			"author": "沈佺期",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "人事有代谢，往来成古今。江山留胜迹，我辈复登临。水落鱼梁浅，天寒梦泽深。羊公碑尚在，读罢泪沾襟。(尚在 一作：字在)",
			"title": "与诸子登岘山",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "清瑟怨遥夜，绕弦风雨哀。孤灯闻楚角，残月下章台。 芳草已云暮，故人殊未来。乡书不可寄，秋雁又南回。",
			"title": "章台夜思",
			"author": "韦庄",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "江汉曾为客，相逢每醉还。浮云一别后，流水十年间。欢笑情如旧，萧疏鬓已斑。何因不归去？淮上有秋山。",
			"title": "淮上喜会梁川故人 / 淮上喜会梁州故人",
			"author": "韦应物",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "楚江微雨里，建业暮钟时。漠漠帆来重，冥冥鸟去迟。 海门深不见，浦树远含滋。相送情无限，沾襟比散丝。",
			"title": "赋得暮雨送李胄 / 赋得暮雨送李曹",
			"author": "韦应物",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "夫子何为者，栖栖一代中。地犹鄹氏邑，宅即鲁王宫。 叹凤嗟身否，伤麟怨道穷。今看两楹奠，当与梦时同。",
			"title": "经邹鲁祭孔子而叹之",
			"author": "李隆基",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "灞原风雨定，晚见雁行频。落叶他乡树，寒灯独夜人。空园白露滴，孤壁野僧邻。寄卧郊扉久，何年致此身。",
			"title": "灞上秋居",
			"author": "马戴",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "露气寒光集，微阳下楚丘。猿啼洞庭树，人在木兰舟。广泽生明月，苍山夹乱流。云中君不见，竟夕自悲秋。",
			"title": "楚江怀古三首·其一",
			"author": "马戴",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "林卧愁春尽，搴帷览物华。忽逢青鸟使，邀入赤松家。 丹灶初开火，仙桃正落花。童颜若可驻，何惜醉流霞。",
			"title": "清明日宴梅道士房 / 宴梅道士山房",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "迢递三巴路，羁危万里身。乱山残雪夜，孤烛异乡人。渐与骨肉远，转于僮仆亲。那堪正飘泊，明日岁华新。",
			"title": "除夜 / 巴山道中除夜书怀 / 除夜有怀",
			"author": "崔涂",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "几行归塞尽，念尔独何之。暮雨相呼失，寒塘欲下迟。渚云低暗度，关月冷相随。未必逢矰缴，孤飞自可疑。",
			"title": "孤雁二首·其二",
			"author": "崔涂",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "清晨入古寺，初日照高林。竹径通幽处，禅房花木深。山光悦鸟性，潭影空人心。万籁此都寂，但余钟磬音。(版本一)清晨入古寺，初日照高林。曲径通幽处，禅房花木深。山光悦鸟性，潭影空人心。万籁此俱寂，惟余钟磬音。(版本二)清晨入古寺，初日照高林。竹径通幽处，禅房花木深。山光悦鸟性，潭影空人心。万籁此俱寂，但余钟磬音。(版本三)清晨入古寺，初日照高林。曲径通幽处，禅房花木深。山光悦鸟性，潭影空人心。万籁此俱寂，但余钟磬音。(版本四)",
			"title": "题破山寺后禅院",
			"author": "常建",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "海上生明月，天涯共此时。情人怨遥夜，竟夕起相思。灭烛怜光满，披衣觉露滋。不堪盈手赠，还寝梦佳期。",
			"title": "望月怀远 / 望月怀古",
			"author": "张九龄",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "调角断清秋，征人倚戍楼。春风对青冢，白日落梁州。 大汉无兵阻，穷边有客游。蕃情似此水，长愿向南流。",
			"title": "书边事",
			"author": "张乔",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "前年伐月支，城上没全师。蕃汉断消息，死生长别离。 无人收废帐，归马识残旗。欲祭疑君在，天涯哭此时。",
			"title": "没蕃故人",
			"author": "张籍",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "乡心新岁切，天畔独潸然。老至居人下，春归在客先。 岭猿同旦暮，江柳共风烟。已似长沙傅，从今又几年。",
			"title": "新年作",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "红叶晚萧萧，长亭酒一瓢。残云归太华，疏雨过中条。 树色随山迥，河声入海遥。帝乡明日到，犹自梦渔樵。",
			"title": "秋日赴阙题潼关驿楼 / 行次潼关逢魏扶东归",
			"author": "许浑",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "一路经行处，莓苔见履痕。白云依静渚，春草闭闲门。 过雨看松色，随山到水源。溪花与禅意，相对亦忘言。",
			"title": "寻南溪常山道人隐居 / 寻南溪常道士",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "荒戍落黄叶，浩然离故关。高风汉阳渡，初日郢门山。 江上几人在，天涯孤棹还。何当重相见，尊酒慰离颜。",
			"title": "送人东游",
			"author": "温庭筠",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "古台摇落后，秋日望乡心。野寺人来少，云峰水隔深。夕阳依旧垒，寒磬满空林。惆怅南朝事，长江独至今。",
			"title": "秋日登吴公台上寺远眺",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "遥夜泛清瑟，西风生翠萝。残萤栖玉露，早雁拂金河。高树晓还密，远山晴更多。淮南一叶下，自觉洞庭波。",
			"title": "早秋三首·其一",
			"author": "许浑",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "移家虽带郭，野径入桑麻。近种篱边菊，秋来未著花。 扣门无犬吠，欲去问西家。报道山中去，归时每日斜。",
			"title": "寻陆鸿渐不遇",
			"author": "皎然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "望君烟水阔，挥手泪沾巾。飞鸟没何处，青山空向人。长江一帆远，落日五湖春。谁见汀洲上，相思愁白蘋。",
			"title": "饯别王十一南游",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "天地英雄气，千秋尚凛然。势分三足鼎，业复五铢钱。 得相能开国，生儿不象贤。凄凉蜀故妓，来舞魏宫前。",
			"title": "蜀先主庙",
			"author": "刘禹锡",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "故关衰草遍，离别自堪悲。(自堪悲 一作：正堪悲)路出寒云外，人归暮雪时。少孤为客早，多难识君迟。掩泪空相向，风尘何处期。",
			"title": "李端公 / 送李端",
			"author": "卢纶",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "道由白云尽，春与青溪长。时有落花至，远随流水香。 闲门向山路，深柳读书堂。幽映每白日，清辉照衣裳。",
			"title": "阙题",
			"author": "刘昚虚",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "上国随缘住，来途若梦行。浮天沧海远，去世法舟轻。水月通禅寂，鱼龙听梵声。惟怜一灯影，万里眼中明。",
			"title": "送僧归日本",
			"author": "钱起",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "泉壑带茅茨，云霞生薜帷。竹怜新雨后，山爱夕阳时。 闲鹭栖常早，秋花落更迟。家童扫萝径，昨与故人期。",
			"title": "谷口书斋寄杨补阙",
			"author": "钱起",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "流落征南将，曾驱十万师。罢归无旧业，老去恋明时。独立三边静，轻生一剑知。茫茫江汉上，日暮欲何之。",
			"title": "送李中丞之襄州 / 送李中丞归汉阳别业",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "西陆蝉声唱，南冠客思深。(客思深 一作：客思侵)不堪玄鬓影，来对白头吟。(不堪 一作：那堪)露重飞难进，风多响易沉。无人信高洁，谁为表予心？",
			"title": "咏蝉 / 在狱咏蝉",
			"author": "骆宾王",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "昔日戏言身后意，今朝都到眼前来。(身后意 一作：身后事)衣裳已施行看尽，针线犹存未忍开。尚想旧情怜婢仆，也曾因梦送钱财。诚知此恨人人有，贫贱夫妻百事哀。",
			"title": "遣悲怀三首·其二",
			"author": "元稹",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "天秋月又满，城阙夜千重。还作江南会，翻疑梦里逢。 风枝惊暗鹊，露草覆寒蛩。羁旅长堪醉，相留畏晓钟。",
			"title": "客夜与故人偶集 / 江乡故人偶集客舍",
			"author": "戴叔伦",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "闲坐悲君亦自悲，百年多是几多时。邓攸无子寻知命，潘岳悼亡犹费词。同穴窅冥何所望，他生缘会更难期。惟将终夜常开眼，报答平生未展眉。",
			"title": "遣悲怀三首·其三",
			"author": "元稹",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "洞门高阁霭馀辉，桃李阴阴柳絮飞。禁里疏钟官舍晚，省中啼鸟吏人稀。晨摇玉佩趋金殿，夕奉天书拜琐闱。强欲从君无那老，将因卧病解朝衣。",
			"title": "酬郭给事",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "长簟迎风早，空城澹月华。星河秋一雁，砧杵夜千家。 节候看应晚，心期卧亦赊。向来吟秀句，不觉已鸣鸦。",
			"title": "酬程延秋夜即事见赠",
			"author": "韩翃",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "谢公最小偏怜女，自嫁黔娄百事乖。顾我无衣搜荩箧，泥他沽酒拔金钗。(荩箧 一作：画箧)野蔬充膳甘长藿，落叶添薪仰古槐。今日俸钱过十万，与君营奠复营斋。",
			"title": "遣悲怀三首·其一",
			"author": "元稹",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "积雨空林烟火迟，蒸藜炊黍饷东菑。漠漠水田飞白鹭，阴阴夏木啭黄鹂。山中习静观朝槿，松下清斋折露葵。野老与人争席罢，海鸥何事更相疑。",
			"title": "积雨辋川庄作 / 秋归辋川庄作",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "时难年荒世业空，弟兄羁旅各西东。田园寥落干戈后，骨肉流离道路中。吊影分为千里雁，辞根散作九秋蓬。共看明月应垂泪，一夜乡心五处同。",
			"title": "望月有感",
			"author": "白居易",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "鸡鸣紫陌曙光寒，莺啭皇州春色阑。金阙晓钟开万户，玉阶仙仗拥千官。花迎剑珮星初落，柳拂旌旗露未干。独有凤凰池上客，阳春一曲和皆难。",
			"title": "奉和中书舍人贾至早朝大明宫",
			"author": "岑参",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "五夜漏声催晓箭，九重春色醉仙桃。旌旗日暖龙蛇动，宫殿风微燕雀高。朝罢香烟携满袖，诗成珠玉在挥毫。欲知世掌丝纶美，池上于今有凤毛。",
			"title": "奉和贾至舍人早朝大明宫",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "渭水自萦秦塞曲，黄山旧绕汉宫斜。銮舆迥出千门柳，阁道回看上苑花。云里帝城双凤阙，雨中春树万人家。为乘阳气行时令，不是宸游玩物华。",
			"title": "奉和圣制从蓬莱向兴庆阁道中留春雨中春望之作应制",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "凤凰台上凤凰游，凤去台空江自流。吴宫花草埋幽径，晋代衣冠成古丘。三山半落青天外，二水中分白鹭洲。(二水 一作：一水)总为浮云能蔽日，长安不见使人愁。",
			"title": "登金陵凤凰台",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "重帏深下莫愁堂，卧后清宵细细长。神女生涯原是梦，小姑居处本无郎。风波不信菱枝弱，月露谁教桂叶香。直道相思了无益，未妨惆怅是清狂。",
			"title": "无题·重帏深下莫愁堂",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "相见时难别亦难，东风无力百花残。春蚕到死丝方尽，蜡炬成灰泪始干。晓镜但愁云鬓改，夜吟应觉月光寒。蓬山此去无多路，青鸟殷勤为探看。(蓬山 一作：蓬莱)",
			"title": "无题·相见时难别亦难",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "凤尾香罗薄几重，碧文圆顶夜深缝。扇裁月魄羞难掩，车走雷声语未通。曾是寂寥金烬暗，断无消息石榴红。斑骓只系垂杨岸，何处西南任好风。",
			"title": "无题·凤尾香罗薄几重",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "飒飒东风细雨来，芙蓉塘外有轻雷。金蟾啮锁烧香入，玉虎牵丝汲井回。贾氏窥帘韩掾少，宓妃留枕魏王才。春心莫共花争发，一寸相思一寸灰！",
			"title": "无题·飒飒东风细雨来",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "来是空言去绝踪，月斜楼上五更钟。梦为远别啼难唤，书被催成墨未浓。蜡照半笼金翡翠，麝熏微度绣芙蓉。刘郎已恨蓬山远，更隔蓬山一万重！",
			"title": "无题·来是空言去绝踪",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "锦瑟无端五十弦，一弦一柱思华年。庄生晓梦迷蝴蝶，望帝春心托杜鹃。沧海月明珠有泪，蓝田日暖玉生烟。此情可待成追忆，只是当时已惘然。",
			"title": "锦瑟",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "昨夜星辰昨夜风，画楼西畔桂堂东。身无彩凤双飞翼，心有灵犀一点通。隔座送钩春酒暖，分曹射覆蜡灯红。嗟余听鼓应官去，走马兰台类转蓬。",
			"title": "无题·昨夜星辰昨夜风",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "猿鸟犹疑畏简书，风云常为护储胥。徒令上将挥神笔，终见降王走传车。管乐有才原不忝，关张无命欲何如？他年锦里经祠庙，梁父吟成恨有余。",
			"title": "筹笔驿",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "怅卧新春白袷衣，白门寥落意多违。红楼隔雨相望冷，珠箔飘灯独自归。远路应悲春晼晚，残霄犹得梦依稀。玉珰缄札何由达，万里云罗一雁飞。",
			"title": "春雨",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "朝闻游子唱离歌，昨夜微霜初渡河。鸿雁不堪愁里听，云山况是客中过。关城树色催寒近，御苑砧声向晚多。(色 一作：曙)莫见长安行乐处，空令岁月易蹉跎。",
			"title": "送魏万之京",
			"author": "李颀",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "群山万壑赴荆门，生长明妃尚有村。一去紫台连朔漠，独留青冢向黄昏。画图省识春风面，环佩空归夜月魂。(夜月 一作：月夜 环 一作：环)千载琵琶作胡语，分明怨恨曲中论。",
			"title": "咏怀古迹五首·其三",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "紫泉宫殿锁烟霞，欲取芜城作帝家。玉玺不缘归日角，锦帆应是到天涯。于今腐草无萤火，终古垂杨有暮鸦。地下若逢陈后主，岂宜重问后庭花。",
			"title": "隋宫",
			"author": "李商隐",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "蜀主窥吴幸三峡，崩年亦在永安宫。翠华想像空山里，玉殿虚无野寺中。古庙杉松巢水鹤，岁时伏腊走村翁。武侯祠堂常邻近，一体君臣祭祀同。",
			"title": "咏怀古迹五首·其四",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "岁暮阴阳催短景，天涯霜雪霁寒宵。五更鼓角声悲壮，三峡星河影动摇。野哭几家闻战伐，夷歌数处起渔樵。卧龙跃马终黄土，人事依依漫寂寥。(版本一)岁暮阴阳催短景，天涯霜雪霁寒宵。五更鼓角声悲壮，三峡星河影动摇。野哭千家闻战伐，夷歌数处起渔樵。卧龙跃马终黄土，人事音书漫寂寥。(版本二)",
			"title": "阁夜",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "清秋幕府井梧寒，独宿江城蜡炬残。永夜角声悲自语，中天月色好谁看。风尘荏苒音书绝，关塞萧条行路难。已忍伶俜十年事，强移栖息一枝安。",
			"title": "宿府",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "摇落深知宋玉悲，风流儒雅亦吾师。怅望千秋一洒泪，萧条异代不同时。江山故宅空文藻，云雨荒台岂梦思。最是楚宫俱泯灭，舟人指点到今疑。",
			"title": "咏怀古迹五首·其二",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "诸葛大名垂宇宙，宗臣遗像肃清高。三分割据纡筹策，万古云霄一羽毛。伯仲之间见伊吕，指挥若定失萧曹。运移汉祚终难复，志决身歼军务劳。",
			"title": "咏怀古迹五首·其五",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "花近高楼伤客心，万方多难此登临。锦江春色来天地，玉垒浮云变古今。北极朝廷终不改，西山寇盗莫相侵。可怜后主还祠庙，日暮聊为《梁甫吟》。(梁甫 一作：梁父)",
			"title": "登楼",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "剑外忽传收蓟北，初闻涕泪满衣裳。却看妻子愁何在，漫卷诗书喜欲狂。白日放歌须纵酒，青春作伴好还乡。即从巴峡穿巫峡，便下襄阳向洛阳。",
			"title": "闻官军收河南河北",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "西山白雪三城戍，南浦清江万里桥。海内风尘诸弟隔，天涯涕泪一身遥。惟将迟暮供多病，未有涓埃答圣朝。(惟 通：唯)跨马出郊时极目，不堪人事日萧条。",
			"title": "野望",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "支离东北风尘际，漂泊西南天地间。三峡楼台淹日月，五溪衣服共云山。羯胡事主终无赖，词客哀时且未还。庾信平生最萧瑟，暮年诗赋动江关。",
			"title": "咏怀古迹五首·其一",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "城上高楼接大荒，海天愁思正茫茫。惊风乱飐芙蓉水，密雨斜侵薜荔墙。岭树重遮千里目，江流曲似九回肠。共来百越文身地，犹自音书滞一乡。",
			"title": "登柳州城楼寄漳汀封连四州",
			"author": "柳宗元",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "丞相祠堂何处寻，锦官城外柏森森。映阶碧草自春色，隔叶黄鹂空好音。三顾频烦天下计，两朝开济老臣心。(频烦 一作：频频)出师未捷身先死，长使英雄泪满襟。",
			"title": "蜀相",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "舍南舍北皆春水，但见群鸥日日来。花径不曾缘客扫，蓬门今始为君开。盘飧市远无兼味，樽酒家贫只旧醅。肯与邻翁相对饮，隔篱呼取尽馀杯。(馀 通：余)",
			"title": "客至",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "风急天高猿啸哀，渚清沙白鸟飞回。无边落木萧萧下，不尽长江滚滚来。万里悲秋常作客，百年多病独登台。艰难苦恨繁霜鬓，潦倒新停浊酒杯。",
			"title": "登高",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "莺啼燕语报新年，马邑龙堆路几千。家住层城临汉苑，心随明月到胡天。(层城 一作：秦城)机中锦字论长恨，楼上花枝笑独眠。为问元戎窦车骑，何时返旆勒燕然。",
			"title": "春思",
			"author": "皇甫冉",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "去年花里逢君别，今日花开已一年。世事茫茫难自料，春愁黯黯独成眠。身多疾病思田里，邑有流亡愧俸钱。闻道欲来相问讯，西楼望月几回圆。",
			"title": "寄李儋元锡",
			"author": "韦应物",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "蓬门未识绮罗香，拟托良媒益自伤。谁爱风流高格调，共怜时世俭梳妆。敢将十指夸针巧，不把双眉斗画长。苦恨年年压金线，为他人作嫁衣裳。",
			"title": "贫女",
			"author": "秦韬玉",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "汉文皇帝有高台，此日登临曙色开。三晋云山皆北向，二陵风雨自东来。关门令尹谁能识，河上仙翁去不回。且欲近寻彭泽宰，陶然共醉菊花杯。",
			"title": "九日登望仙台呈刘明府容",
			"author": "崔曙",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "昔人已乘黄鹤去，此地空余黄鹤楼。黄鹤一去不复返，白云千载空悠悠。晴川历历汉阳树，芳草萋萋鹦鹉洲。日暮乡关何处是？烟波江上使人愁。",
			"title": "黄鹤楼 / 登黄鹤楼",
			"author": "崔颢",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "岧峣太华俯咸京，天外三峰削不成。武帝祠前云欲散，仙人掌上雨初晴。河山北枕秦关险，驿路西连汉畤平。借问路傍名利客，无如此处学长生。",
			"title": "行经华阴",
			"author": "崔颢",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "燕台一望客心惊，笳鼓喧喧汉将营。(笳鼓 一作：箫鼓)万里寒光生积雪，三边曙色动危旌。沙场烽火侵胡月，海畔云山拥蓟城。少小虽非投笔吏，论功还欲请长缨。",
			"title": "望蓟门",
			"author": "祖咏",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "澹然空水对斜晖，曲岛苍茫接翠微。波上马嘶看棹去，柳边人歇待船归。数丛沙草群鸥散，万顷江田一鹭飞。谁解乘舟寻范蠡，五湖烟水独忘机。",
			"title": "利州南渡",
			"author": "温庭筠",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "嗟君此别意何如，驻马衔杯问谪居。巫峡啼猿数行泪，衡阳归雁几封书。青枫江上秋帆远，白帝城边古木疏。圣代即今多雨露，暂时分手莫踌躇。",
			"title": "送李少府贬峡中王少府贬长沙",
			"author": "高适",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "王濬楼船下益州，金陵王气黯然收。千寻铁锁沉江底，一片降幡出石头。人世几回伤往事，山形依旧枕寒流。今逢四海为家日，故垒萧萧芦荻秋。",
			"title": "西塞山怀古",
			"author": "刘禹锡",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "苏武魂销汉使前，古祠高树两茫然。云边雁断胡天月，陇上羊归塞草烟。回日楼台非甲帐，去时冠剑是丁年。茂陵不见封侯印，空向秋波哭逝川。",
			"title": "苏武庙",
			"author": "温庭筠",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "三年谪宦此栖迟，万古惟留楚客悲。秋草独寻人去后，寒林空见日斜时。汉文有道恩犹薄，湘水无情吊岂知。寂寂江山摇落处，怜君何事到天涯。",
			"title": "长沙过贾谊宅",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "汀洲无浪复无烟，楚客相思益渺然。汉口夕阳斜渡鸟，洞庭秋水远连天。孤城背岭寒吹角，独树临江夜泊船。(独 一作：“戍”)贾谊上书忧汉室，长沙谪去古今怜。",
			"title": "自夏口至鹦鹉洲夕望岳阳寄源中丞",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "云开远见汉阳城，犹是孤帆一日程。估客昼眠知浪静，舟人夜语觉潮生。三湘愁鬓逢秋色，万里归心对月明。旧业已随征战尽，更堪江上鼓鼙声。",
			"title": "晚次鄂州",
			"author": "卢纶",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "二月黄莺飞上林，春城紫禁晓阴阴。长乐钟声花外尽，龙池柳色雨中深。阳和不散穷途恨，霄汉长怀捧日心。献赋十年犹未遇，羞将白发对华簪。",
			"title": "赠阙下裴舍人",
			"author": "钱起",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "十二楼中尽晓妆，望仙楼上望君王。锁衔金兽连环冷，水滴铜龙昼漏长。云髻罢梳还对镜，罗衣欲换更添香。遥窥正殿帘开处，袍袴宫人扫御床。",
			"title": "宫词",
			"author": "薛逢",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "仙台初见五城楼，风物凄凄宿雨收。山色遥连秦树晚，砧声近报汉宫秋。疏松影落空坛静，细草香闲小洞幽。何用别寻方外去，人间亦自有丹丘。",
			"title": "同题仙游观",
			"author": "韩翃",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "生涯岂料承优诏，世事空知学醉歌。江上月明胡雁过，淮南木落楚山多。寄身且喜沧洲近，顾影无如白发何。今日龙钟人共弃，愧君犹遣慎风波。",
			"title": "江州重别薛六柳八二员外",
			"author": "刘长卿",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "高卧南斋时，开帷月初吐。清辉澹水木，演漾在窗户。冉冉几盈虚，澄澄变今古。美人清江畔，是夜越吟苦。千里共如何，微风吹兰杜。",
			"title": "同从弟销南斋玩月忆山阴崔少府",
			"author": "王昌龄",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "斜阳照墟落，穷巷牛羊归。(斜 一作：光)野老念牧童，倚杖候荆扉。雉雊麦苗秀，蚕眠桑叶稀。田夫荷锄至，相见语依依。即此羡闲逸，怅然吟式微。",
			"title": "渭川田家",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "言入黄花川，每逐清溪水。随山将万转，趣途无百里。声喧乱石中，色静深松里。漾漾泛菱荇，澄澄映葭苇。我心素已闲，清川澹如此。请留磐石上，垂钓将已矣。(磐石 一作：盘石)",
			"title": "青溪 / 过青溪水作",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "圣代无隐者，英灵尽来归。遂令东山客，不得顾采薇。既至金门远，孰云吾道非。江淮度寒食，京洛缝春衣。置酒长安道，同心与我违。行当浮桂棹，未几拂荆扉。远树带行客，孤城当落晖。吾谋适不用，勿谓知音稀。",
			"title": "送綦毋潜落第还乡 / 送别",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "艳色天下重，西施宁久微。朝为越溪女，暮作吴宫妃。贱日岂殊众，贵来方悟稀。邀人傅香粉，不自著罗衣。君宠益娇态，君怜无是非。当时浣纱伴，莫得同车归。持谢邻家子，效颦安可希。",
			"title": "西施咏",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "塔势如涌出，孤高耸天宫。登临出世界，磴道盘虚空。突兀压神州，峥嵘如鬼工。四角碍白日，七层摩苍穹。下窥指高鸟，俯听闻惊风。连山若波涛，奔凑似朝东。(凑 一作：走；似 一作：如)青槐夹驰道，宫馆何玲珑。(馆 一作：观)秋色从西来，苍然满关中。五陵北原上，万古青濛濛。净理了可悟，胜因夙所宗。誓将挂冠去，觉道资无穷。",
			"title": "与高适薛据同登慈恩寺浮图",
			"author": "岑参",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "花间一壶酒，独酌无相亲。举杯邀明月，对影成三人。月既不解饮，影徒随我身。暂伴月将影，行乐须及春。我歌月徘徊，我舞影零乱。醒时同交欢，醉后各分散。(同交欢 一作：相交欢)永结无情游，相期邈云汉。",
			"title": "月下独酌四首·其一",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "燕草如碧丝，秦桑低绿枝。当君怀归日，是妾断肠时。 春风不相识，何事入罗帏。",
			"title": "春思",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "下马饮君酒，问君何所之？君言不得意，归卧南山陲。但去莫复问，白云无尽时。",
			"title": "送别",
			"author": "王维",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "死别已吞声，生别常恻恻。江南瘴疠地，逐客无消息。故人入我梦，明我长相忆。恐非平生魂，路远不可测。魂来枫林青，魂返关塞黑。君今在罗网，何以有羽翼。落月满屋梁，犹疑照颜色。水深波浪阔，无使蛟龙得。(版本一)死别已吞声，生别常恻恻。江南瘴疠地，逐客无消息。故人入我梦，明我长相忆。君今在罗网，何以有羽翼。恐非平生魂，路远不可测。魂来枫林青，魂返关塞黑。落月满屋梁，犹疑照颜色。水深波浪阔，无使蛟龙得。(版本二)",
			"title": "梦李白二首·其一",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "昔岁逢太平，山林二十年。泉源在庭户，洞壑当门前。井税有常期，日晏犹得眠。忽然遭世变，数岁亲戎旃。今来典斯郡，山夷又纷然。城小贼不屠，人贫伤可怜。是以陷邻境，此州独见全。使臣将王命，岂不如贼焉？今彼征敛者，迫之如火煎。谁能绝人命，以作时世贤！思欲委符节，引竿自刺船。将家就鱼麦，归老江湖边。",
			"title": "贼退示官吏",
			"author": "元结",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "浮云终日行，游子久不至。三夜频梦君，情亲见君意。告归常局促，苦道来不易。江湖多风波，舟楫恐失坠。出门搔白首，若负平生志。冠盖满京华，斯人独憔悴。孰云网恢恢，将老身反累。千秋万岁名，寂寞身后事。",
			"title": "梦李白二首·其二",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "岱宗夫如何？齐鲁青未了。造化钟神秀，阴阳割昏晓。荡胸生曾云，决眦入归鸟。( 曾 通：层)会当凌绝顶，一览众山小。",
			"title": "望岳",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "人生不相见，动如参与商。今夕复何夕，共此灯烛光！少壮能几时？鬓发各已苍！访旧半为鬼，惊呼热中肠。焉知二十载，重上君子堂。昔别君未婚，儿女忽成行。怡然敬父执，问我来何方？问答未及已，驱儿罗酒浆。夜雨剪春韭，新炊间黄粱。主称会面难，一举累十觞。十觞亦不醉，感子故意长。明日隔山岳，世事两茫茫。 ",
			"title": "赠卫八处士",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "绝代有佳人，幽居在空谷。自云良家子，零落依草木。关中昔丧乱，兄弟遭杀戮。官高何足论，不得收骨肉。世情恶衰歇，万事随转烛。夫婿轻薄儿，新人美如玉。合昏尚知时，鸳鸯不独宿。但见新人笑，那闻旧人哭。在山泉水清，出山泉水浊。侍婢卖珠回，牵萝补茅屋。摘花不插发，采柏动盈掬。天寒翠袖薄，日暮倚修竹。",
			"title": "佳人",
			"author": "杜甫",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "暮从碧山下，山月随人归。却顾所来径，苍苍横翠微。相携及田家，童稚开荆扉。绿竹入幽径，青萝拂行衣。欢言得所憩，美酒聊共挥。长歌吟松风，曲尽河星稀。我醉君复乐，陶然共忘机。",
			"title": "下终南山过斛斯山人宿置酒",
			"author": "李白",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "绝顶一茅茨，直上三十里。扣关无僮仆，窥室唯案几。 若非巾柴车，应是钓秋水。差池不相见，黾勉空仰止。 草色新雨中，松声晚窗里。及兹契幽绝，自足荡心耳。 虽无宾主意，颇得清净理。兴尽方下山，何必待之子。",
			"title": "寻西山隐者不遇 / 山行寻隐者不遇",
			"author": "丘为",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "汲井漱寒齿，清心拂尘服。闲持贝叶书，步出东斋读。真源了无取，妄迹世所逐。遗言冀可冥，缮性何由熟。道人庭宇静，苔色连深竹。日出雾露馀，青松如膏沐。澹然离言说，悟悦心自足。",
			"title": "晨诣超师院读禅经",
			"author": "柳宗元",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "北山白云里，隐者自怡悦。相望试登高，心随雁飞灭。(试 一作 始)愁因薄暮起，兴是清秋发。时见归村人，沙行渡头歇。天边树若荠，江畔洲如月。何当载酒来，共醉重阳节。",
			"title": "秋登兰山寄张五 / 秋登万山寄张五 / 九月九日岘山寄张子容 / 秋登万山",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "山光忽西落，池月渐东上。散发乘夕凉，开轩卧闲敞。荷风送香气，竹露滴清响。欲取鸣琴弹，恨无知音赏。感此怀故人，中宵劳梦想。(宵 一作：终)",
			"title": "夏日南亭怀辛大",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "夕阳度西岭，群壑倏已暝。松月生夜凉，风泉满清听。 樵人归欲尽，烟鸟栖初定。之子期宿来，孤琴候萝径。",
			"title": "宿业师山房期丁大不至 / 宿业师山房待丁大不至",
			"author": "孟浩然",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "久为簪组累，幸此南夷谪。闲依农圃邻，偶似山林客。 晓耕翻露草，夜榜响溪石。来往不逢人，长歌楚天碧。",
			"title": "溪居",
			"author": "柳宗元",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "客从东方来，衣上灞陵雨。问客何为来，采山因买斧。 冥冥花正开，飏飏燕新乳。昨别今已春，鬓丝生几缕。",
			"title": "长安遇冯著",
			"author": "韦应物",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "永日方戚戚，出行复悠悠。女子今有行，大江溯轻舟。尔辈苦无恃，抚念益慈柔。幼为长所育，两别泣不休。对此结中肠，义往难复留。自小阙内训，事姑贻我忧。赖兹托令门，任恤庶无尤。贫俭诚所尚，资从岂待周。孝恭遵妇道，容止顺其猷。别离在今晨，见尔当何秋。居闲始自遣，临感忽难收。归来视幼女，零泪缘缨流。",
			"title": "送杨氏女",
			"author": "韦应物",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "落帆逗淮镇，停舫临孤驿。浩浩风起波，冥冥日沉夕。 人归山郭暗，雁下芦洲白。独夜忆秦关，听钟未眠客。",
			"title": "夕次盱眙县",
			"author": "韦应物",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "吏舍跼终年，出郊旷清曙。杨柳散和风，青山澹吾虑。依丛适自憩，缘涧还复去。微雨霭芳原，春鸠鸣何处。乐幽心屡止，遵事迹犹遽。终罢斯结庐，慕陶直可庶。",
			"title": "东郊",
			"author": "韦应物",
			"book": "唐诗三百首",
			"dynasty": "唐代"
		}, {
			"content": "兵卫森画戟，宴寝凝清香。海上风雨至，逍遥池阁凉。烦疴近消散，嘉宾复满堂。自惭居处崇，未睹斯民康。理会是非遣，性达形迹忘。鲜肥属时禁，蔬果幸见尝。俯饮一杯酒，仰聆金玉章。神欢体自轻，意欲凌风翔。吴中盛文史，群彦今汪洋。方知大藩地，岂曰财赋强。",
