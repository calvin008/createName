.nav-bar {
  position: relative;
  z-index: 10;
  height: 90rpx;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  background-color: #fff;
}
.nav-bar .nav-item {
    display: inline-block;
    width: 150rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 30rpx;
    color: #8a8a8a;
    position: relative;
}
.nav-bar .nav-item:after {
      content: '';
      width: 0;
      height: 0;
      border-bottom: 4rpx solid #2c2c2c;
      position: absolute;
      left: 50%;
      bottom: 0;
      -webkit-transform: translateX(-50%);
              transform: translateX(-50%);
      -webkit-transition: .3s;
      transition: .3s;
}
.nav-bar .current {
    color: #2c2c2c;
}
.nav-bar .current:after {
      width: 50%;
}
